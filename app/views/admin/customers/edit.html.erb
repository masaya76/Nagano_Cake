<h2><%= @customer.full_name %>さんの会員情報編集</h2>
<%= form_with model:@customer, url:admin_customer_path, method: :patch, local:true do |customer| %>
　<table>
    <thead></thead>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= customer.text_field :first_name %></td>
        <td><%= customer.text_field :last_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= customer.text_field :first_name_kana %></td>
        <td><%= customer.text_field :last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= customer.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= customer.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= customer.text_field :telphone %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= customer.text_field :email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <%= customer.radio_button :is_active, "true" %>
          <%= customer.label :is_active, "有効" %>
          <%= customer.radio_button :is_active, "false" %>
          <%= customer.label :is_active, "退会" %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= customer.submit '保存を変更' %>
<% end %>