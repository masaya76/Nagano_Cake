<h2><%= @customer.full_name %>さんの会員詳細</h2>
<table>
  <thead></thead>
  <tbody>
    <tr>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>
        <% if @customer.is_active == true %>
          有効
        <% else %>
          退会
      <% end %>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to '編集する', edit_admin_customer_path(@customer.id) %>

