<h6>ジャンル一覧・追加</h6>
<%= form_with model:@genre, url: admin_genres_path, method: :post, local:true do |f| %>
  <div class = "field" >
    <span>ジャンル名</span>
    <%= f.text_field :name %>
    <%= f.submit '新規登録',  url: admin_genres_path, metod: :get %>
  </div>
<% end %>
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to '編集する',  edit_admin_genre_path(genre.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
