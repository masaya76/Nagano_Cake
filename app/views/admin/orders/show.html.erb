<h2>注文履歴詳細</h2>
<table>
  <thead></thead>
  <tbody>
    <%= form_with model:@order, local true do |f| %>
      <tr>
        <td>購入者</td>
        <td><%= @order.full_name %></td>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.create_at %><td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          <p><%= @order.shipping_address %></p>
          <p><%= @order.full_name %></p>
        </td></p>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.peyment_method %></td>
      </tr>
      <tr>
        <td>注文ステータス</td>
        <td><%= f.serect :status, [['入金待ち',1], ['入金確認',2] ['制作中',3], ['発送準備中',4], ['発送済み',5]] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_details %>
      <tr>
        <td><%= order_details.item.name %></td>
        <td><%= (order_details.get_payment * 1.1).floor %></td>
        <td><%= order_details.amount %></td>
        <td><%= (order_details.get_payment * 1.1).floor * order_details.amount %></td>
        <td><%= f.serect :making_status, [['着手不可',1], ['制作待ち',2], ['制作中',3], ['制作完了',4]] %></td>
      </tr>
    <% end %>
  </tbody>
</table>