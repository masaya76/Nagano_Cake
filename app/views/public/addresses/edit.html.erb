<h6>配送先編集</h6>
<table>
  <thead>
    <%= form_with model:@address, url:public_address_path, method: :patch, local:true do |f| %>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <th><%= f.text_field :postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= f.text_field :address %></th>
      </tr>
      <tr>
        <th>宛名</th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '変更内容を変更' %></th>
      </tr>
    <% end %>
  </thead>
</table>