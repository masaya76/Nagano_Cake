<h4>配送先登録/一覧</h4>
<div class = "area">
  <table class = "address">
    <thead>
      <%= form_with model:@address, url: public_addresses_path, method: :post, local:true do |f| %>
        <tr>
          <th>郵便番号</th>
          <th><%= f.text_field :postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address %></th>
        </tr>
        <tr>
          <th>宛名</th>
          <th><%= f.text_field :name %></th>
          <th><%= f.submit '新規登録' %></th>
        </tr>
      <% end %>
    </thead>
  </table>
</div>
<div class ="field">
  <table border="2" style="border-collapse: collapse">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to '編集する', edit_public_address_path(address.id) %>
            <%= link_to '削除する', public_address_path(address.id), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

