<h6>ショッピングカート</h6>
<span class="deleyte_all"><%= button_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete %></span>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.image  %><%= cart_item.item.name %></td>
              <td><%= (cart_item.item.price * @tax).floor %></td>
              <td>
                <%= form_with model:@cart_item, url:public_cart_item_path(cart_item.id), method: :patch, local:true do |cart_item| %>
                  <%= cart_item.select :amount, *[1..10] %>
                  <%= cart_item.submit '変更' %>
                <% end %>
              </td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
