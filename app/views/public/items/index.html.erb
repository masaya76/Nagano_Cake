<div class = "container">
  <div class = "row">
    <div class = "col-lg-2">
      <table>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, public_items_search_path(genre_id: genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class ="col-lg-10">
      <h4>商品一覧(全<%= @items.count %>件)</h4>
      <div class ="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div>
            <%= link_to public_item_path(item.id) do %>
              <p><%= attachment_image_tag item, :image, :fill, 100, 100 %></p>
              <p><%= item.name %></p>
              <p>￥<%= item.with_tax_price %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>