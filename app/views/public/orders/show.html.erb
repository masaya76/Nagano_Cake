<h5>注文履歴一覧</h5>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h6>注文情報</h6>
      <table border="2" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>注文日</th>
            <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
          </tr>
          <tr>
            <th>配送先</th>
            <th><%= @order.shipping_address %></th>
          </tr>
          <tr>
            <th>支払方法</th>
            <th><%= @order.peyment_method_i18n %></th>
          </tr>
          <tr>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-lg-3">
      <table border="2" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>配送料</th>
            <th><%= @order.postage %></th>
          </tr>
          <tr>
            <th>商品合計</th>
            <th><%= @order.subtotal_order() %> </th>
          </tr>
          <tr>
            <th>ご請求額</th>
            <th><%= @order.payment %></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7">
      <h6>注文内容</h6>
      <table border="2" style="border-collapse: collapse">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.get_payment %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal_detail %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
